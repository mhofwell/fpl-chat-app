{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Output Directory */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "fpl-domain.types": ["../../types/fpl-domain.types"],
      "fpl-api.types": ["../../types/fpl-api.types"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}