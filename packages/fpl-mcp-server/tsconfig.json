{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022", // Or your desired ECMAScript target
    "module": "Node16", // Or "CommonJS" depending on your needs, but Node16 handles modern features well
    "moduleResolution": "Node16",
    "esModuleInterop": true, // Allows default imports from commonjs modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files

    /* Output Directory */
    "outDir": "./dist", // Output compiled JS to the 'dist' folder

    /* Source Directories - Use rootDirs */
    "rootDirs": [
      "./src",        // Your primary source code for this package
      "../../types"   // Path to the shared types directory relative to this tsconfig.json
                      // Adjust if your shared types live elsewhere (e.g., "../types")
    ],

    /* Path Aliases */
    "baseUrl": ".", // Base directory for path resolution (package root)
    "paths": {
      "@/*": ["src/*"], // Alias for files within this package's src folder
      "@types/*": ["../../types/*"] // Alias for shared types in the monorepo root
    }
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files within the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist"          // Exclude the output directory itself
  ]
}