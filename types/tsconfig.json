{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "Node16", 
    "emitDeclarationOnly": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Keep strictness consistent
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declarationMap": true,
    "declaration": true, 
    "composite": true
  },
  "include": [
    // Include all .ts files within this directory
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
